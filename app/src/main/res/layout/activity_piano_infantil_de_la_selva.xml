<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03A9F4"
    tools:context=".piano_infantil_de_la_selva">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:onClick="Gato"
        android:src="@drawable/gat" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:onClick="Leon"
        android:src="@drawable/leeeeeo" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:onClick="Perro"
        android:src="@drawable/perro" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:onClick="Vaca"
        android:src="@drawable/vak" />
</LinearLayout>